{
  "name": "griffon",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Quentin <rousseltin@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -A --parallel --interlaced run dev",
    "lint": "yarn workspaces foreach -A --parallel --interlaced run lint",
    "build:events": "yarn workspace wse run build",
    "build:dtos": "yarn workspace dto run build",
    "packages": "yarn build:events && yarn build:dtos && yarn install"
  },
  "packageManager": "yarn@4.6.0"
}
